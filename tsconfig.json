{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "noEmit": true
  },
  "include": ["packages/"]
}
